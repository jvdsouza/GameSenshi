{
	"name": "functions",
	"version": "1.0.0",
	"description": "Cloud Functions for Firebase",
	"main": "dist/index.js",
	"scripts": {
		"lint": "eslint src/ --ext=js,jsx --fix",
		"build": "babel src/ --out-dir dist --source-maps --copy-files",
		"env": "babel-node uploadEnv.js",
		"puild": "env-cmd .config/prod.env npm run env && npm run build",
		"serve": "firebase serve --only functions",
		"shell": "firebase functions:shell",
		"start": "npm run shell",
		"deploy": "firebase deploy --only functions",
		"logs": "firebase functions:log",
		"exp": "babel-node test.js",
		"install:clean": "rm -rf node_modules/ && rm -rf package-lock.json && npm install && npm start"
	},
	"engines": {
		"node": "8"
	},
	"dependencies": {
		"@babel/polyfill": "^7.4.4",
		"@google-cloud/storage": "^2.5.0",
		"busboy": "^0.3.1",
		"cors": "^2.8.5",
		"firebase": "^6.0.2",
		"firebase-admin": "~7.0.0",
		"firebase-functions": "^2.3.0",
		"request": "^2.88.0",
		"request-promise": "^4.2.4",
		"uuid-v4": "^0.1.0",
		"web-push": "^3.3.3",
		"yup": "^0.27.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.4.3",
		"@babel/core": "^7.4.3",
		"@babel/node": "^7.2.2",
		"@babel/preset-env": "^7.4.3",
		"babel-plugin-module-resolver": "^3.2.0",
		"env-cmd": "^8.0.2",
		"eslint": "^5.12.0",
		"eslint-config-prettier": "^4.1.0",
		"eslint-plugin-prettier": "^3.0.1",
		"eslint-plugin-promise": "^4.0.1",
		"firebase-functions-test": "^0.1.6",
		"husky": "^1.3.1",
		"prettier": "^1.16.4",
		"pretty-quick": "^1.10.0"
	},
	"private": true,
	"babel": {
		"presets": [
			"@babel/preset-env"
		],
		"plugins": [
			[
				"module-resolver",
				{
					"root": [
						"./src"
					]
				}
			]
		]
	},
	"prettier": {
		"eslintIntegration": true,
		"singleQuote": true,
		"jsxSingleQuote": true,
		"trailingComma": "es5",
		"semi": false,
		"jsxBracketSameLine": true,
		"useTabs": true
	},
	"eslintConfig": {
		"parserOptions": {
			"ecmaVersion": 2017
		},
		"plugins": [
			"promise"
		],
		"settings": {
			"import/resolver": {
				"node": {
					"moduleDirectory": [
						"node_modules",
						"src/"
					]
				}
			}
		},
		"extends": [
			"eslint:recommended",
			"plugin:prettier/recommended"
		],
		"rules": {
			"no-console": "off",
			"no-regex-spaces": "off",
			"no-debugger": "off",
			"no-unused-vars": "off",
			"no-mixed-spaces-and-tabs": "off",
			"no-undef": "off",
			"no-template-curly-in-string": 1,
			"consistent-return": 1,
			"array-callback-return": 1,
			"eqeqeq": 2,
			"no-alert": 2,
			"no-caller": 2,
			"no-eq-null": 2,
			"no-eval": 2,
			"no-extend-native": 1,
			"no-extra-bind": 1,
			"no-extra-label": 1,
			"no-floating-decimal": 2,
			"no-implicit-coercion": 1,
			"no-loop-func": 1,
			"no-new-func": 2,
			"no-new-wrappers": 1,
			"no-throw-literal": 2,
			"prefer-promise-reject-errors": 2,
			"for-direction": 2,
			"getter-return": 2,
			"no-await-in-loop": 2,
			"no-compare-neg-zero": 2,
			"no-catch-shadow": 1,
			"no-shadow-restricted-names": 2,
			"callback-return": 2,
			"handle-callback-err": 2,
			"no-path-concat": 1,
			"prefer-arrow-callback": 1,
			"promise/always-return": 2,
			"promise/catch-or-return": 2,
			"promise/no-nesting": 1
		}
	}
}
